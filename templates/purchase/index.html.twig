    {% extends 'base.html.twig' %}

    {% block title %}Mes commandes{% endblock %}

    {% block body %}
        <h1>Mes commandes</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Adresse</th>
                    <th>Date de Commande</th>
                    <th>Produits</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for p in purchases %}
                    <tr>
                        <td>{{ p.id }}</td>
                        <td>{{ p.address }}<br>{{ p.postalCode }}</td>
                        <td>{{ p.purchasedAT | date('d/m/Y  H:i') }}</td>
                        <td>
                            <ul>
                                {% for item in p.purchaseItems %}
                                    <li>{{ item.quantity }}x {{ item.productName }} ({{ item.total}} €)</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>{{ p.total}} €</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endblock %}